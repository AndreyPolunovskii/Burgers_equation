//управляющие параметры//

//начальные условия (соответсвуют функции u(x,0)= a1*sin(x) +a2*sin(2x) +a3*sin(3x) )
const double a1 =1;
const double a2 =0;
const double a3 =0;



#define steps 150 // количество шагов (по времени)
#define Rad (double)0.004 // длина шага (по времени)


//на сколько точек делим каждый шаг
const size_t delta =30 ;

// порядок частичной суммы ряда Фурье по пространственной переменной
const size_t ORDER_GARMONIC = 16;

//порядок Тейлоровского многочлена по времени
const size_t ORDER_SER = 50;

//значение вязкости
const double mu =0.1;




// приближенное значение длины отрезка интегрирования по времени
const double T = steps*Rad ;


const size_t col_point = delta*steps -1; // количество точек по времени


//-------------------------
// параметры для создания графиков/анимации//


// количество графиков гармоник, построенных в файле X.eps
const int number_graph = 10;

// номер кадра в анимации, который хотим построить в отдельном файле graph_moment.gif (число должно быть не больше, чем col_frame!)
const int  frame_graph = 30;


//количество кадров для анимации( желательно чтобы это число было кратно числу col_point) и не больше чем col_point!!
const double col_frame = col_point *2 / steps;
// чем меньше кадров (col_frame), тем быстрее показывает
// так же чем меньше col_point , тем медленнее показывает

